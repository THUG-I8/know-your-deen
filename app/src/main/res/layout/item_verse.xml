<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:rippleColor="@color/primary_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- رأس الآية -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- رقم الآية -->
            <TextView
                android:id="@+id/tv_verse_number"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/verse_number_background"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/cairo_bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- زر العلامة المرجعية -->
            <ImageButton
                android:id="@+id/btn_bookmark"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_bookmark_border"
                android:contentDescription="إضافة علامة مرجعية"
                app:tint="@color/text_secondary" />

            <!-- زر المشاركة -->
            <ImageButton
                android:id="@+id/btn_share"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_share"
                android:contentDescription="مشاركة الآية"
                app:tint="@color/text_secondary" />

            <!-- زر المزيد -->
            <ImageButton
                android:id="@+id/btn_more"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_more_vert"
                android:contentDescription="المزيد من الخيارات"
                app:tint="@color/text_secondary" />

        </LinearLayout>

        <!-- النص العربي -->
        <TextView
            android:id="@+id/tv_arabic_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/cairo_regular"
            android:gravity="center"
            android:lineSpacingExtra="8dp"
            android:text="بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ"
            android:textColor="@color/text_color"
            android:textDirection="rtl"
            android:textSize="20sp" />

        <!-- الترجمة -->
        <TextView
            android:id="@+id/tv_translation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/cairo_regular"
            android:lineSpacingExtra="4dp"
            android:text="In the name of Allah, the Entirely Merciful, the Especially Merciful."
            android:textColor="@color/text_secondary"
            android:textDirection="rtl"
            android:textSize="16sp"
            android:visibility="gone" />

        <!-- التفسير -->
        <TextView
            android:id="@+id/tv_tafseer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tafseer_background"
            android:fontFamily="@font/cairo_regular"
            android:lineSpacingExtra="4dp"
            android:padding="12dp"
            android:text="تفسير الآية..."
            android:textColor="@color/text_secondary"
            android:textDirection="rtl"
            android:textSize="14sp"
            android:visibility="gone" />

        <!-- معلومات إضافية -->
        <LinearLayout
            android:id="@+id/layout_verse_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_page_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_medium"
                android:text="الصفحة 1"
                android:textColor="@color/text_light"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_juz_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_medium"
                android:text="الجزء 1"
                android:textColor="@color/text_light"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>