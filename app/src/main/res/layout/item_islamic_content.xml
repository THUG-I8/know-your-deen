<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <!-- Icon -->
        <ImageView
            android:id="@+id/imageViewIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_quran"
            tools:src="@drawable/ic_quran" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="أركان الإسلام"
                android:textColor="@color/islamic_white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/cairo_bold"
                tools:text="أركان الإسلام" />

            <TextView
                android:id="@+id/textViewSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="الأركان الخمسة"
                android:textColor="@color/overlay_light"
                android:textSize="14sp"
                android:fontFamily="@font/cairo_medium"
                tools:text="الأركان الخمسة" />

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="تعرف على أركان الإسلام الخمسة وأهميتها في حياة المسلم"
                android:textColor="@color/overlay_light"
                android:textSize="12sp"
                android:fontFamily="@font/cairo_regular"
                android:lineSpacingExtra="2dp"
                tools:text="تعرف على أركان الإسلام الخمسة وأهميتها في حياة المسلم" />

        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_forward"
            android:tint="@color/overlay_light" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>