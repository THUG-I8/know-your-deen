<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewSurah"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/background_card"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Surah Number Circle -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@color/primary"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp">

            <TextView
                android:id="@+id/textViewSurahNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/background_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/cairo_bold"
                tools:text="1" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Surah Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Surah Name -->
            <TextView
                android:id="@+id/textViewSurahName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الفاتحة"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/cairo_bold"
                tools:text="الفاتحة" />

            <!-- English Name -->
            <TextView
                android:id="@+id/textViewSurahNameEnglish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Al-Fatiha"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:fontFamily="@font/cairo_regular"
                tools:text="Al-Fatiha" />

            <!-- Verses Count and Revelation Type -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewVersesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7 آية"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/cairo_medium"
                    tools:text="7 آية" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="•"
                    android:textColor="@color/text_disabled"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewRevelationType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مكية"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/cairo_medium"
                    tools:text="مكية" />

            </LinearLayout>

        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_arrow_forward"
            android:tint="@color/text_secondary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>